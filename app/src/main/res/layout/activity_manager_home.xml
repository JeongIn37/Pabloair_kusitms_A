<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    tools:context=".Manager_home_Activity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alarm"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/manager_home_topLayout"
        app:layout_constraintBottom_toBottomOf="@id/manager_home_topLayout"
        app:layout_constraintEnd_toEndOf="@id/manager_home_topLayout"/>


    <LinearLayout
        android:id="@+id/manager_home_topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:src="@drawable/allivery_logo_edit"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/manager_home_background"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/home_activity_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/manager_home_topLayout"/>

    <LinearLayout
        android:id="@+id/manager_home_btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp">

        <ImageButton
            android:id="@+id/manager_home_btn1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_qr_code_scan_1"
            android:background="@drawable/home_activity_btn"/>

        <ImageButton
            android:id="@+id/manager_home_btn2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/ic_open_access"
            android:background="@drawable/home_activity_btn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/manager_home_btnLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스캔하기"
            android:fontFamily="@font/nanumsquare_aceb"
            android:textColor="@color/font_cyan"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개폐 관리"
            android:layout_marginStart="125dp"
            android:fontFamily="@font/nanumsquare_aceb"
            android:textColor="@color/font_cyan"
            android:textSize="18sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>