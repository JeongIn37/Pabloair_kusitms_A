<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue" >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alarm"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/main_topLayout"
        app:layout_constraintBottom_toBottomOf="@id/main_topLayout"
        app:layout_constraintEnd_toEndOf="@id/main_topLayout"/>


    <LinearLayout
        android:id="@+id/main_topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@color/font_blue"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="27sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LLIVERY"
            android:textColor="@color/font_cyan"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="27sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/main_topLayout"
        app:layout_constraintStart_toStartOf="@id/main_topLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/manager_home_background"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/home_activity_background"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manager_home_topLayout">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/ic_top_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:fontFamily="@font/nanumsquareeb"
                    android:textColor="@color/font_cyan"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="20dp"
                    android:text="주문 상세 조회"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/nanumsquare_acb"
                            android:textSize="12sp"
                            android:textColor="@color/font_dark_gray"
                            android:text="주문번호 A20220907AXC03" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/nanumsquare_acb"
                            android:textColor="@color/font_black"
                            android:textSize="18sp"
                            android:text="가평군 농협 하나로마트 자라점" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/qrCode_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:background="@color/zxing_transparent"
                        android:scaleType="fitEnd"
                        android:src="@drawable/qr_sample" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:textColor="@color/font_black"
                    android:textSize="14sp"
                    android:text="경기도 가평군 가평읍 호반로 2562 (우) 12427" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:textColor="@color/font_black"
                    android:textSize="14sp"
                    android:text="지번 | 가평읍 달전리 452-1" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_aceb"
                        android:textColor="@color/font_black"
                        android:textSize="14sp"
                        android:text="주문 일시: " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:textColor="@color/font_black"
                        android:textSize="14sp"
                        android:text="2022년 09월 07일 오후 5시 22분" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"
                    android:background="@color/font_light_gray"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_aceb"
                        android:textColor="@color/font_black"
                        android:textSize="14sp"
                        android:text="주문자 성명: " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:textColor="@color/font_black"
                        android:textSize="14sp"
                        android:text="김유정" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_aceb"
                        android:textColor="@color/font_black"
                        android:textSize="14sp"
                        android:text="주문 품목: " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:textColor="@color/font_black"
                        android:textSize="14sp"
                        android:text="청보 깐마늘 100g 외 12개" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_aceb"
                        android:textColor="@color/font_black"
                        android:textSize="19sp"
                        android:text="주문 금액: " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_aceb"
                        android:textColor="@color/font_blue"
                        android:textSize="19sp"
                        android:text="87,050원" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"
                    android:background="@color/font_light_gray"/>

                <!-- 주문 물품 목록 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_aceb"
                        android:textColor="@color/font_black"
                        android:textSize="19sp"
                        android:layout_gravity="center"
                        android:text="주문 물품 목록" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/item_garlic"
                            android:scaleType="fitCenter"
                            android:padding="1dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/item_image_template" />

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumsquare_aceb"
                                android:textColor="@color/font_black"
                                android:textSize="12sp"
                                android:text="청보 깐마늘 100g" />

                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textColor="@color/font_black"
                                android:textSize="12sp"
                                android:text="4,290원" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/item_yogurt"
                            android:scaleType="fitCenter"
                            android:padding="1dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/item_image_template" />

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumsquare_aceb"
                                android:textColor="@color/font_black"
                                android:textSize="12sp"
                                android:text="생크림 요거트 85g*4입" />

                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textColor="@color/font_black"
                                android:textSize="12sp"
                                android:text="2,990원" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/item_tea"
                            android:scaleType="fitCenter"
                            android:padding="1dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/item_image_template" />

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumsquare_aceb"
                                android:textColor="@color/font_black"
                                android:textSize="12sp"
                                android:text="유자꿀차 1kg" />

                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textColor="@color/font_black"
                                android:textSize="12sp"
                                android:text="5,990원" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="110dp"/>



        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>