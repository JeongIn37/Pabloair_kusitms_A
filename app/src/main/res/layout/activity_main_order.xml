<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    tools:context=".Main_Order_Activity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alarm"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/main_topLayout"
        app:layout_constraintBottom_toBottomOf="@id/main_topLayout"
        app:layout_constraintEnd_toEndOf="@id/main_topLayout"/>


    <LinearLayout
        android:id="@+id/main_topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@color/font_blue"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="27sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LLIVERY"
            android:textColor="@color/font_cyan"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="27sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/main_topLayout"
        app:layout_constraintStart_toStartOf="@id/main_topLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/manager_home_background"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/home_activity_background"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manager_home_topLayout">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/ic_top_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:fontFamily="@font/nanumsquareeb"
                    android:textColor="@color/font_cyan"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="20dp"
                    android:text="주문서 작성"/>


            </LinearLayout>


            <!-- 주문서 작성 폼 -->
            <TextView
                android:id="@+id/order_username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문자 이름"
                android:layout_gravity="center"
                android:layout_marginLeft="-100dp"
                android:textSize="16sp"
                android:fontFamily="@font/nanumsquareb"
                android:textColor="@color/font_dark_gray"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/order_username"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/form_box"
                android:fontFamily="@font/nanumsquareb"
                android:text=""
                android:textColor="@color/font_dark_gray"
                android:textSize="16sp"
                android:autofillHints="username"
                android:maxLength="15"
                android:inputType="text"
                app:layout_constraintVertical_bias="0.928"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/order_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰 번호"
                android:layout_gravity="center"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/nanumsquareb"
                android:textColor="@color/font_dark_gray"
                android:layout_marginBottom="5dp"/>


            <EditText
                android:id="@+id/order_phone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/form_box"
                android:fontFamily="@font/nanumsquareb"
                android:text=""
                android:textColor="@color/font_dark_gray"
                android:textSize="16sp"
                android:autofillHints="phone"
                android:maxLength="15"
                android:inputType="text"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/order_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배송지 입력"
                android:layout_gravity="center"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/nanumsquareb"
                android:textColor="@color/font_dark_gray"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/order_address"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/form_box"
                android:fontFamily="@font/nanumsquareb"
                android:text=""
                android:textColor="@color/font_dark_gray"
                android:textSize="16sp"
                android:maxLength="15"
                android:inputType="text"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/order_deliver_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="희망 배송 시간"
                android:layout_gravity="center"
                android:layout_marginLeft="-90dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/nanumsquareb"
                android:textColor="@color/font_dark_gray"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/order_deliver_time"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/form_box"
                android:fontFamily="@font/nanumsquareb"
                android:text=""
                android:textColor="@color/font_dark_gray"
                android:textSize="16sp"
                android:hint="원하는 배송 시간 입력(ex.12:30~15:00)"
                android:maxLength="15"
                android:inputType="text"
                tools:ignore="MissingConstraints" />



            <Button
                android:id="@+id/order_submit_btn"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="128dp"
                android:background="@drawable/next_blue_radius_btn"
                android:fontFamily="@font/nanumsquareeb"
                android:text="주문서 작성"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="NotSibling" />


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>