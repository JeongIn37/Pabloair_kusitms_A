<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    tools:context=".Create_QRcodeActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alarm"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/user_home_topLayout"
        app:layout_constraintBottom_toBottomOf="@id/user_home_topLayout"
        app:layout_constraintEnd_toEndOf="@id/user_home_topLayout"/>


    <LinearLayout
        android:id="@+id/user_home_topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@color/font_blue"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="27sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LLIVERY"
            android:textColor="@color/font_cyan"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="27sp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/user_home_background"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/home_activity_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_home_topLayout"/>


    <LinearLayout
        android:id="@+id/user_qrCode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/user_home_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR코드"
            android:fontFamily="@font/nanumsquare_acb"
            android:textColor="@color/font_cyan"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_home_background"
            android:layout_marginTop="35dp" />

        <ImageView
            android:id="@+id/user_qrCode_background"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/home_activity_btn"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/create_qrCode_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="QR코드가 작동하지 않을시"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="19sp"
            android:textColor="#939393"/>

        <TextView
            android:id="@+id/create_qrCode_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관리자에게 문의하세요"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="19sp"
            android:textColor="#939393"/>

        <TextView
            android:id="@+id/create_qrCode_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의하기"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="16sp"
            android:textColor="@color/font_cyan"/>

        <View
            android:id="@+id/create_qrCode_v1"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/font_cyan"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_bottom1"
            android:layout_marginTop="20dp" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>