<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/listview_background"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/search_productPhoto"
        android:layout_width="220px"
        android:layout_height="220px"
        android:layout_marginEnd="20dp"
        android:src="@drawable/order_galic"
        android:background="@drawable/rectangle_list_item_photo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/search_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="청보 깐마늘 100g"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/nanumsquarer"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/click_list_productAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="청보 깐마늘 100g"
            android:paddingBottom="10dp"
            android:textColor="@color/font_gray"
            android:textSize="15sp"
            android:fontFamily="@font/nanumsquarer"/>

        <TextView
            android:id="@+id/click_list_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2390원"
            android:paddingStart="2dp"
            android:fontFamily="@font/nanumsquarer"
            android:textColor="@color/black"
            android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>