<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alarm"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/main_topLayout"
        app:layout_constraintBottom_toBottomOf="@id/main_topLayout"
        app:layout_constraintEnd_toEndOf="@id/main_topLayout"/>


    <LinearLayout
        android:id="@+id/main_topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@color/font_blue"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="27sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LLIVERY"
            android:textColor="@color/font_cyan"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="27sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/main_topLayout"
        app:layout_constraintStart_toStartOf="@id/main_topLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/manager_home_background"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/home_activity_background"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manager_home_topLayout">


            <LinearLayout
                android:id="@+id/home_btnLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:layout_marginTop="-80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="40dp"
                android:layout_marginEnd="20dp">

                <Button
                    android:id="@+id/home_btn_order"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/home_activity_btn"
                    android:drawableTop="@drawable/ic_order"
                    android:fontFamily="@font/nanumsquare_aceb"
                    android:paddingTop="40dp"
                    android:text="주문하기"
                    android:textColor="@color/font_cyan"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/home_btn_orderList"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/home_activity_btn"
                    android:drawableTop="@drawable/ic_order_list"
                    android:fontFamily="@font/nanumsquare_aceb"
                    android:paddingTop="40dp"
                    android:text="주문내역"
                    android:textColor="@color/font_cyan"
                    android:textSize="20sp" />

            </LinearLayout>





            <LinearLayout
                android:id="@+id/home_btnLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp">

                <Button
                    android:id="@+id/home_btn_search"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/home_activity_btn"
                    android:drawableTop="@drawable/ic_search"
                    android:fontFamily="@font/nanumsquare_aceb"
                    android:paddingTop="40dp"
                    android:text="검색"
                    android:textColor="@color/font_cyan"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/home_btn_mypage"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/home_activity_btn"
                    android:drawableTop="@drawable/ic_mypage"
                    android:fontFamily="@font/nanumsquare_aceb"
                    android:paddingTop="40dp"
                    android:text="마이페이지"
                    android:textColor="@color/font_cyan"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>